global_defs {
  router_id {{ deploy_keepalived_router_id }} 
}

vrrp_script check_nginx {
  script "/usr/bin/curl -k https://localhost"
  interval 2
  weight 2
}

vrrp_instance 1 {
  state {{ deploy_keepalived_state }}
  interface eth0
  virtual_router_id 1
  priority {{ deploy_keepalived_priority }}
  advert_int 1
  authentication {
     auth_type PASS
     auth_pass {{ deploy_keepalived_auth_pass }}
        }
  virtual_ipaddress {
     10.10.5.100/24
        }
track_script {
     check_nginx
        }
}